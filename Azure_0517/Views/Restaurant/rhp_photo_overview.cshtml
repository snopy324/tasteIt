@model  Azure_0517.Models.ViewModel.rhp_photo_overview_viewmodel

@section styles{
    <style>
        #c_rhp_self_allphoto p {
            margin: 0;
            padding: 0;
            position: relative;
            display: inline-block;
            overflow: hidden;
        }
            #c_rhp_self_allphoto p strong {
                position: absolute;
                display: block;
                z-index: 1;
                bottom: 0;
                width: 200px;
                height: 30px;
                background: rgba(0,0,0,0.5);
                text-align: center;
                line-height: 35px;
                opacity: 0;
                color: white;
            }

            #c_rhp_self_allphoto p span {
                position: absolute;
                display: block;
                z-index: 0;
                top: 0;
                width: 200px;
                height: 200px;
                box-shadow: inset 0 0 50px rgba(50,30,0,0.6),inset 0 0 100px rgba(50,30,0,0.3);
                background: rgba(255,155,0,0.2);
                opacity: 0;
            }

        #c_rhp_self_allphoto button {
            padding: 0;
            margin: 5px;
            background-color: transparent;
            border: none;
        }
    </style>
    }


<div class="container-fluid">
    <div class="container-fluid">
        <h5 class="text-warning m-0 p-0">­介紹與照片</h5>
        <hr class="border-warning m-0 p-0" style="clear:both" />
        <div id="rhp_photooverview" class="container-fluid mt-3">
            <div class="container-fluid text-left" id="c_rhp_self_allphoto">
                @foreach (var r_photo in Model.rhp_po_self)
                {
                    int pud = @r_photo.Pic_ID;
                    <button type="button" data-toggle="modal" data-target="#rhp_allphoto">
                        <p>
                            <img src="@Url.Action("getdbimage", "Restaurant", new { id =r_photo.Pic_ID ,table="picture"})"
                                 data-pid="@r_photo.Pic_ID" data-title="@r_photo.Pic_title" data-content="@r_photo.Pic_Content" style="width:200px;height:200px">
                            <strong>@r_photo.Pic_title</strong><span></span>
                        </p>
                    </button>
                }
            </div>
        </div>
    </div>
</div>