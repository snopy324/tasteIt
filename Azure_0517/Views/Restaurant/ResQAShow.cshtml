            //----signalr-------------------------------------------------------------
        function scrollWindow() {
            var t = document.getElementById('QAChat');
            var focus = document.getElementById('QA_Content');
            t.scrollTop = t.scrollHeight;
            focus.focus();

        }

        $(document).ready(function () {
            scrollWindow()
        });

        $(document).on('keydown', 'textarea', function () {
            if (event.which == 13) {
                event.preventDefault();
             
                $("#sendmessage").trigger('click');

            }
        })

        $(document).on('click', 'li>.btn-info', function () {
            event.preventDefault();


            $("#ChatRoom").load('@Url.Action("ResChatPartial")', { AdmID: $(this).data('id') }, scrollWindow);

        })
        $(document).on('click', 'li>.btn-danger', function () {
            event.preventDefault();


            $("#ChatRoom").load('@Url.Action("ResChatPartial")', { MemID: $(this).data('id') }, scrollWindow);

        })
        $(document).on('click', '#sendmessage', function () {

            event.preventDefault();
            if ($("#QA_Content").val() == '') {
                return;
            }
            var MemID = $("#MemberIDr").val(),
                QA_AdministratorID = $("#AdmIDr").val(),
                QA_Content = $("#QA_Content").val();
         
            $.post('@Url.Action("ResAddToQa")', { QA_Content: QA_Content, QA_AdministratorID: QA_AdministratorID, MemID: MemID }, function () {
               //下面這段不知為何無效
                
                $("#ChatRoom").load('@Url.Action("ResChatPartial")', { AdmID: QA_AdministratorID, MemID: MemID }, scrollWindow);
                $("#ChatName").load('@Url.Action("MemLeftChatPartial")');

            });


        });
    </script>
