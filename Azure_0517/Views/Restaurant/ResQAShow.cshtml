<form action="~/Restaurant/ResAddToQa" method="post">
    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
            <div class="col-md-4 col-xl-3 chat">
                <div class="card mb-sm-3 mb-md-0 contacts_card">
                    <div class="card-header">
                        <div class="input-group">
                            <input class="form-control search" type="text" placeholder="Search...">
                            <div class="input-group-prepend">
                                <span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body contacts_body">
                        <ul id="ChatName" class="contacts">
                            @foreach (var item in Model.QA_SystemsNameData)
                            {
                                <li>
                                    @Html.ActionLink(item.Value, "ResQAShow", " Restaurant", new { AdmID = item.Key }, new { @class = "btn  btn-info", data_id = item.Key })
                                </li>
                            }
                            @if (Model.QA_SystemsResNameData != null)
                            {
                                foreach (var item in Model.QA_SystemsResNameData)
                                {
                                    <li>
                                        @Html.ActionLink(item.Value, "ResQAShow", " Restaurant", new { MemID = item.Key }, new { @class = "btn  btn-danger", data_id = item.Key })
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="card-footer"></div>
                </div>
            </div>
            <div class="col-md-8 col-xl-6 chat" id="QAtype">
                <div id="ChatRoom" class="card">
                    @if (Model.QA_SystemsData != null)
                    {
                        if (Model.QA_SystemsData.Count() > 0)
                        {
                            if (Model.RoleId == 3)
                            {
                                @Html.Action("ResChatPartial", "Restaurant", new { AdmID = Model.QA_SystemsData.FirstOrDefault().QA_AdministratorID })
                            }
                            else if (Model.RoleId == 1)
                            {
                                @Html.Action("ResChatPartial", "Restaurant", new { MemID = Model.QA_SystemsData.FirstOrDefault().QA_MemberID })
                            }
                        }
                        else
                        {
                            if (Model.RoleId == 3)
                            {
                                @Html.Action("ResChatPartial", "Restaurant", new { AdmID = Model.Id })
                            }
                            else if (Model.RoleId == 1)
                            {
                                @Html.Action("ResChatPartial", "Restaurant", new { MemID = Model.Id })
                            }
                        }
                    }
                    else
                    {
                        @Html.Action("ResChatPartial", "Restaurant", new { AdmId = Model.QA_SystemsNameData.FirstOrDefault().Key })
                    }
                </div>
            </div>
        </div>
    </div>

</form>


