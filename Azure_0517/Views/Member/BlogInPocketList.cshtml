@model IEnumerable<Azure_0517.Models.News>


<div>
    <h2 style="background-color:#B4A582;height:5px;margin:0;padding:0"></h2>
    @foreach (var news in Model)
    {
        <div class="row" style="padding-left:1rem;padding-right:1rem">
