<script>
        function scrollWindow() {

            var t = document.getElementById('QAChat');
            var focus = document.getElementById('QA_Content');
            t.scrollTop = t.scrollHeight;
            focus.focus();

        }

        $(document).ready(function () {
            scrollWindow()
        });

    $(document).on('keydown', 'textarea', function () {
        if (event.which == 13) {
            event.preventDefault();

            $("#sendmessage").trigger('click');

        }
    })

        //
         $(document).on('click', 'li>.btn-info', function () {
            event.preventDefault();

             $("#ChatRoom").load('@Url.Action("MemberChatPartial")', { AdmId: $(this).data('id') }, scrollWindow)

        })

        $(document).on('click', 'li>.btn-danger', function () {
            event.preventDefault();

            $("#ChatRoom").load('@Url.Action("MemberChatPartial")', { ResId: $(this).data('id') }, scrollWindow)
        })

        $(document).on('click', '#sendmessage', function () {

            event.preventDefault();
            if ($("#QA_Content").val() == '') {
                return;
            }
            var    QA_RestaurantID = $("#ResIDr").val(),
                QA_AdministratorID = $("#AdmIDr").val(),
                QA_Content = $("#QA_Content").val();

            $.post('@Url.Action("AddToQa")', { QA_Content: QA_Content, QA_AdministratorID: QA_AdministratorID, QA_RestaurantID: QA_RestaurantID }, function () {

                $("#ChatRoom").load('@Url.Action("MemberChatPartial")', { AdmId: QA_AdministratorID, ResId: QA_RestaurantID }, scrollWindow);
                $("#ChatName").load('@Url.Action("MemLeftChatPartial")');
        //

            });
        });
</script>
